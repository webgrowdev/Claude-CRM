{
  "brand": {
    "name": "Clinic",
    "slogan": "Turn inquiries into sales",
    "tagline_alternatives": [
      "From DM to Deal",
      "Every lead deserves attention",
      "Your pocket sales assistant"
    ]
  },
  "colors": {
    "primary": {
      "hex": "#6366F1",
      "name": "Indigo",
      "usage": "Main brand color, CTAs, primary buttons, active states, links"
    },
    "primary_light": {
      "hex": "#818CF8",
      "name": "Indigo Light",
      "usage": "Hover states, secondary highlights, gradients"
    },
    "primary_dark": {
      "hex": "#4F46E5",
      "name": "Indigo Dark",
      "usage": "Pressed states, text on light backgrounds"
    },
    "secondary": {
      "hex": "#F472B6",
      "name": "Pink",
      "usage": "Accent color, feminine touch for aesthetic clinic audience, highlights"
    },
    "secondary_light": {
      "hex": "#F9A8D4",
      "name": "Pink Light",
      "usage": "Subtle accents, background tints"
    },
    "success": {
      "hex": "#10B981",
      "name": "Emerald",
      "usage": "Closed deals, positive states, confirmations, won leads"
    },
    "warning": {
      "hex": "#F59E0B",
      "name": "Amber",
      "usage": "Pending actions, follow-up reminders, attention needed"
