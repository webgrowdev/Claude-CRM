      "usage": "Cards, modals, elevated surfaces"
    },
    "background_dark": {
      "hex": "#0F172A",
      "name": "Slate 900",
      "usage": "Dark mode background, footer, dark sections"
    },
    "text": {
      "hex": "#1E293B",
      "name": "Slate 800",
      "usage": "Primary text, headings"
    },
    "text_secondary": {
      "hex": "#64748B",
      "name": "Slate 500",
      "usage": "Secondary text, captions, labels"
    },
    "text_muted": {
      "hex": "#94A3B8",
      "name": "Slate 400",
      "usage": "Placeholder text, disabled states"
    },
    "border": {
      "hex": "#E2E8F0",
      "name": "Slate 200",
      "usage": "Borders, dividers, separators"
    }
  },
  "gradients": {
    "primary": "linear-gradient(135deg, #6366F1 0%, #818CF8 100%)",
